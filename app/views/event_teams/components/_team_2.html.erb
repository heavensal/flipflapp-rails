<div class="rounded-2xl bg-red-900/80 backdrop-blur-md shadow-xl p-6 flex flex-col gap-4">
  <h2 class="text-center text-2xl font-bold tracking-tight text-white mb-2">
    <%= team_2.name %>
  </h2>
  <div class="grid grid-cols-1 gap-3">
    <% team_2.event_participants.each do |player| %>
      <div class="flex items-center gap-3 bg-red-800/80 rounded-lg px-4 py-3">
        <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-red-600 to-red-400 flex items-center justify-center text-white font-bold shadow-md">
          <%= player.user.first_name.first %>
        </div>
        <span class="text-white text-lg font-medium"><%= player.user.first_name %></span>
      </div>
    <% end %>
  </div>
  <% unless team_2.in_this_team?(current_user) %>
    <div class="mt-4">
      <%= render 'event_participants/form_btn', event: event, team: team_2 %>
    </div>
  <% end %>
</div>

