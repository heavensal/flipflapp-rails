<main class="min-h-dvh text-white px-4 py-8">
  <div class="max-w-2xl mx-auto">

    <!-- Header de profil -->
    <header class="text-center mb-8">
      <!-- Avatar principal -->
      <div class="relative inline-block mb-6">
        <div class="size-32 rounded-full bg-gradient-to-tr from-amber-400 to-amber-600 p-1 shadow-xl">
          <div class="w-full h-full rounded-full overflow-hidden bg-gray-800 flex items-center justify-center">
            <% if @user.avatar? %>
              <%= cl_image_tag @user.avatar, class: "w-full h-full object-cover rounded-full" %>
            <% else %>
              <svg width="64" height="64" viewBox="0 0 0.6 0.6" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="text-gray-400">
                <path d="M.44.06a.06.06 0 1 1-.12 0 .06.06 0 0 1 .12 0m0 .38a.04.04 0 1 0 0 .08.04.04 0 0 0 0-.08M.514.244.438.168A.02.02 0 0 0 .423.161H.14a.02.02 0 0 0 0 .04h.108L.12.452V.46a.02.02 0 0 0 .04.008L.2.4h.08L.203.57.2.58a.02.02 0 0 0 .04.008L.428.213l.058.059A.02.02 0 0 0 .514.244"/>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Badge du statut en ligne -->
        <div class="absolute bottom-2 right-2 w-6 h-6 bg-green-500 rounded-full border-4 border-gray-800 shadow-lg"></div>
      </div>

      <!-- Nom et username -->
      <h1 class="text-4xl font-extrabold tracking-tight mb-2">
        <%= @user.first_name %> <%= @user.last_name %>
      </h1>
      <p class="text-secondary-text text-xl mb-4">@<%= @user.username %></p>
    </header>

    <!-- Informations du profil -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">

      <!-- Carte informations personnelles -->
      <div class="rounded-2xl bg-white/5 backdrop-blur-md shadow-xl p-6">
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Informations
        </h2>

        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Email</span>
            <span class="font-medium"><%= @user.email %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Rôle</span>
            <span class="bg-form-green/80 px-2 py-1 rounded-full text-xs font-semibold">
              <%= @user.role.present? ? @user.role.humanize : "Joueur" %>
            </span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Membre depuis</span>
            <span class="font-medium"><%= human_future_date(@user.created_at) %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Statut</span>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-green-400 font-medium">Actif</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Carte statistiques -->
      <div class="rounded-2xl bg-white/5 backdrop-blur-md shadow-xl p-6">
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          Statistiques
        </h2>

        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Événements organisés</span>
            <span class="text-2xl font-bold text-amber-400"><%= @user.events.count %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Participations</span>
            <span class="text-2xl font-bold text-amber-400"><%= @user.event_participants.count %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-indigo-100/60">Amis</span>
            <span class="text-2xl font-bold text-amber-400"><%# @user.friendships.count %></span>
          </div>
        </div>
      </div>
    </section>

    <!-- Derniers événements -->
    <section class="rounded-2xl bg-white/5 backdrop-blur-md shadow-xl p-6 mb-8">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Derniers événements organisés
      </h2>

    </section>

    <!-- Actions -->
    <div class="flex justify-center gap-4">
      <% if current_user == @user %>
        <%= link_to edit_user_registration_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-full bg-primary-yellow text-white font-bold shadow-lg hover:bg-yellow-600 transition-all duration-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifier mon profil
        <% end %>
      <% else %>
        <%= link_to "#", class: "inline-flex items-center gap-2 px-6 py-3 rounded-full bg-form-green text-white font-bold shadow-lg hover:bg-green-600 transition-all duration-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Ajouter en ami
        <% end %>
      <% end %>

      <%= link_to :back, class: "inline-flex items-center gap-2 px-6 py-3 rounded-full bg-gray-700 text-white font-medium shadow-lg hover:bg-gray-600 transition-all duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour
      <% end %>
    </div>
  </div>
</main>
