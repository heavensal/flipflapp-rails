<h1 class="text-3xl font-bold text-white text-center my-8">Prochains Evénements</h1>

<main class="p-4">

  <%# lien pour créer un event %>
  <%= link_to new_event_path, class: "fixed bottom-4 left-4 inline-flex items-center justify-center w-12 h-12 bg-primary-yellow text-white animate-bounce shadow-md transition transform active:scale-95 active:shadow-none" do %>
      <!-- Icône "plus" en style pixel -->
    <svg viewBox="0 0 8 8"
          class="w-6 h-6"
          aria-hidden="true"
          preserveAspectRatio="xMidYMid meet">
      <g fill="currentColor" shape-rendering="crispEdges">
        <rect x="3" y="0" width="2" height="8"/>
        <rect x="0" y="3" width="8" height="2"/>
      </g>
    </svg>
  <% end %>

  <section class="grid grid-cols-1 space-y-1">
    <% @events.each do |event| %>
      <%= render "events/components/one_event_card", event: event %>
    <% end %>
  </section>

  <% if @events.empty? %>
    <section class="text-center py-12">
      <p class="text-indigo-100/60 text-lg">Aucun événement n'est disponible pour le moment.</p>
      <%= link_to "Créer le premier événement", new_event_path,
          class: "inline-block mt-4 px-4 py-2 bg-form-green text-white rounded-lg transition-colors" %>
    </section>
  <% end %>

</main>
