<main class="min-h-dvh text-white px-4 py-8">
  <h1 class="text-3xl font-bold text-center my-4"><%= @event.title %></h1>

  <section id="event-info-section" class="rounded-2xl bg-white/5 backdrop-blur-md shadow-xl p-6 mb-8 flex flex-col gap-4">
    <%= render 'events/components/show_event_info_card', event: @event %>
  </section>

  <section id="grid-teams" class="grid grid-cols-2 gap-2 mt-4">
    <%= render 'event_teams/components/team_1', event: @event, team_1: @team_1 %>
    <%= render 'event_teams/components/team_2', event: @event, team_2: @team_2 %>
    <%= render 'event_teams/components/bench', event: @event, bench: @bench %>
  </section>



  <% if @event.am_i_the_author?(current_user) %>
    <div class="flex justify-center mt-10">
      <%= render 'events/components/destroy_event_btn', event: @event %>
    </div>

  <% elsif @event.in_this_event?(current_user) %>
    <div class="flex justify-center mt-10">
      <%= link_to event_participant_path(EventParticipant.find_by(event: @event, user: current_user)),
        data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir quitter cet événement ?" },
        class: "w-12 h-12 flex items-center justify-center
                rounded-2xl bg-gradient-to-r from-red-600 to-red-800 text-white shadow-md
                active:scale-95 transition" do %>
        <!-- Icône Exit -->
        <svg xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2">
          <!-- Porte -->
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 4h12v16H3z" />
          <!-- Flèche sortie -->
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 12H9m6-6l6 6-6 6" />
        </svg>
      <% end %>
    </div>

  <% end %>

</main>
