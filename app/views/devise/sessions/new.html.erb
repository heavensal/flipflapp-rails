<h1 class="text-3xl text-center text-white m-8">Connexion</h1>

<main class="p-4 min-h-dvh">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto mt-8 space-y-4" }) do |f| %>
    <div>
      <%= f.label :email, "Adresse email", class: "block text-indigo-100/80 mb-2" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-text-input" %>
    </div>

    <div>
      <%= f.label :password, "Mot de passe", class: "block text-indigo-100/80 mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-text-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "form-checkbox-input" %>
        <%= f.label :remember_me, "Se souvenir de moi", class: "ml-2 text-indigo-100/80" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= f.submit "Se connecter", class: "w-full gap-2 flex justify-center items-center bg-primary-yellow text-white py-2 font-semibold transition active:scale-95 active:bg-yellow-500 disabled:opacity-50 disabled:cursor-wait" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>

</main>
